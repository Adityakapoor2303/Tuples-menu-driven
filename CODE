while True:
    a=tuple(input("Enter a tuple"))
    print('''
                To count Number of occurrence of specific value type 1 
                To count first occurrence of specific value type 2
                To count number of elements in the tuple type 3 
                To find the maximum value in the tuple type 4
                To find the minimum value in the tuple type 5
                To sort the tuple type 6''')
    b=input("Enter the method to be used: ")
    if b=="1":
        d=input("Enter the value to be counted: ")
        e=a.count(d)
        print(e)
    elif b=="2":
        c=input("Enter the value of which index is required: ")
        f=a.index(c)
        print(f)
    elif b=="3":
        g=len(a)
        print(g)
    elif b=="4":
        h=max(a)
        print(h)
    elif b=="5":
        i=min(a)
        print(i)
    elif b=="6":
        j=sorted(a)
        print (tuple(j))

    break
